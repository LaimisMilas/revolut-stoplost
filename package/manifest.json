{
  "name": "Revolut stop/lost clicker",
  "action": {},
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "laimis.milasius@gmail.com"
    }
  },
  "version": "0.0.0.1",
  "description": "It's about click. It's about stop/lost. Use it.",
  "icons": {
    "128": "images/icon_128.png",
    "16": "images/icon_16.png",
    "48": "images/icon_48.png"
  },
  "permissions": ["declarativeNetRequest"],
  "background": {
    "service_worker": "./serviceworker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://exchange.revolut.com/*"],
      "js": ["revolut-stoplost-click.js"]
    },
    {
      "matches": ["https://clicker.lt/exchange-revolut/*", "https://exchange.revolut.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/active/icon_48-on.png"],
      "matches": ["https://exchange.revolut.com/*"],
      "as": "image"
    },
    {
      "resources": ["images/active/icon_48-off.png"],
      "matches": ["https://exchange.revolut.com/*"],
      "as": "image"
    }
  ]
}

